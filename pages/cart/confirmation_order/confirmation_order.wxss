.confirm-container{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.submit-container{
  width: 100%;
  height: 100rpx;
  display: flex;
  position: fixed;
  z-index: 100;
  bottom: 0rpx;
  background: #F8F8F8;
}

.submit-container .submit-left{
  width: 65%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.submit-left .total-amount{
  color: #FF6347;
  margin-right: 20rpx;
}

.submit-container .submit-right{
  background: #FF6347;
  color: white;
  width: 35%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}