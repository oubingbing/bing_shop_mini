  border-color: #F2F2F2;
}

.goods-item .goods-left{
  width: 22%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.goods-left image{
  width: 130rpx;
  height: 130rpx;
}

.goods-middle{
  width: 65%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-middle .title{
  font-size: 30rpx;
}

.goods-middle .sku-data{
  font-size: 26rpx;
  color: darkgray;
  display: flex;
  flex-direction: row;
  width: 100%;
}

.goods-middle .price{
  font-size: 26rpx;
  color: #FF6347;
}


.goods-right{
  display: flex;
  flex-direction: column;
  width: 13%;
  align-items: flex-end;
  justify-content: center;
  font-size: 30rpx;
}

