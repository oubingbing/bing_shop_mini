/** 商品样式 **/

.order-body{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 80rpx;
}

.order-item{
  width: 100%;
  display: flex;
  flex-direction: column;
  background: white;
  align-items: center;
  margin-bottom: 30rpx;
}

.order{
  width: 95%;
  display: flex;
  flex-direction: column;
}

.order-header{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 0rpx;
  font-size: 30rpx;
}

.order-header .status{
  color: #FF6347;
}

/** 商品信息 **/
.goods-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
}

.goods-content{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.goods-item{
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 20rpx 0rpx;
  border-bottom-style:solid;
