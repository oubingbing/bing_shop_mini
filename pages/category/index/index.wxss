.category-container{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.category-container .content-container{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.content-container .content{
  width: 100%;
  display: flex;
  flex-direction: row;
}

.content .left-bar{
  width: 20%;
  position: fixed;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #F8F8F8;
  color: #8A8A8A;
}

.left-bar .scroll-h{
  width: 100%;
  height: 1100rpx;
}

.scroll-goods{
  width: 100%;
  height: 1100rpx;
}

.left-bar .category-item{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 25rpx 0rpx;
  font-size: 30rpx;
}

.category-item .item{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.left-bar .select-category-item{
  background: white;
    border-left-style:solid;
  border-width:8rpx;
  border-color: #FF6347;
}

.left-bar .select-item{
  color: black;
  font-weight: bold;
}

.content .right-content{
  width: 80%;
  display: flex;
  flex-direction: column;
  margin-left: 20%;
}

.right-content .goods-item{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom-style:solid;
  border-width:1rpx;
  border-color: #F8F8F8;
  padding: 30rpx 0rpx;
}

.goods-item .goods{
  width: 95%;
  display: flex;
  flex-direction: row;
}

.goods .goods-left{
  width: 20%;
  display: flex;
  flex-direction: column;
}

.goods-left image{
  width: 150rpx;
  height: 150rpx;
}

.goods .goods-right{
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.goods-right .goods-info{
  width: 90%;
  height: 130rpx;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  justify-content: space-between;
}

.goods-info .title{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.title .goods-name{
  font-size: 35rpx;
}

.title .good-remark{
  font-size: 25rpx;
  color: darkgray;
  margin-bottom: 5rpx;
  margin-top: 5rpx;
}

.goods-info .price-info{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.price-info .price{
  width: 70%;
  display: flex;
  flex-direction: column;
  font-weight: bold;
}

.price .chalk-line-price{
  font-size: 25rpx;
  text-decoration:line-through;
  margin-top: 10rpx;
  color: darkgray;
}

.price .normal-price{
  font-size: 28rpx;
  color: #FF6347;
}

.price-info .cart{
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: flex-end;
}

.cart image{
  width: 50rpx;
  height: 50rpx;
}